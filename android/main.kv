<SettingsScreen>:
    name:"SS"
    ScrollView:
        MDList:
            #ThreeLineListItem:
            OneLineListItem:
                text: "Tema automatico"
                #secondary_text: "Automatico"
                #tertiary_text: "Dark mode"
                MDSwitch:
                    id:swmode
                    pos_hint:{"right":0.9,"center_y":0.5} #{'center_x': .5, 'center_y': .5}
                    size:dp(48), dp(64)
            OneLineListItem:
                text:"Ativar modo escuro"
                MDSwitch:
                    id:swdark
                    pos_hint:{"right":0.9,"bottom":0.5}
                    size:dp(48), dp(64)
                    active: 0
                    on_press:app.switch_theme_style(self.active)


<MainLoop>:
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            id: toolbar
            pos_hint: {"top": 1}
            elevation: 10
            title: "Vision"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]
        NavigationLayout:
            ScreenManager:
                id:sm    
                HomeScreen:
                SettingsScreen:

            MDNavigationDrawer:
                id:nav_drawer
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: avatar.height

                    Image:
                        id: avatar
                        size_hint: None, None
                        size: "56dp", "56dp"
                        source: "logo-kivymd.png"

                MDLabel:
                    text: "Vision"
                    font_style: "Button"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    text: "teob18@gmail.com"
                    font_style: "Caption"
                    size_hint_y: None
                    height: self.texture_size[1]
                BoxLayout:
                    ScrollView:     
                        MDList:
                            OneLineAvatarIconListItem:
                                text: "Inicio"
                                on_release:sm.current="HS" 
                                on_release:nav_drawer.set_state("close")
                                IconLeftWidget:
                                    icon:"home"
                                
                            OneLineAvatarIconListItem:
                                text:"Configurações"
                                on_release:sm.current="SS"
                                on_release:nav_drawer.set_state("close")
                                IconLeftWidget:
                                    icon:"cog"
                            OneLineAvatarIconListItem:
                                text:"Sair"
                                on_release:app.stop()
                                IconLeftWidget:
                                    icon:"exit-run"